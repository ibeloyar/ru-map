{
    "compilerOptions": {
      "allowJs": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "outDir": "./lib",
      "moduleResolution": "node",
      "target": "ESNext",
      "module": "ESNext",
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "useDefineForClassFields": true,
      "declarationDir": "lib",
      "rootDir": "./src",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "ts-node": {
      "files": true
    },
    "files": [
      "src/main.ts"
    ],
    "include": [ 
      "./src/**/*.ts",
      "./src/**/*.test.ts",
    ],
    "exclude": [
      "node_modules/**/*"
    ],
  }